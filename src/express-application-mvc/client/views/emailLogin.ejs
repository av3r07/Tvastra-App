                    <i class="far fa-eye-slash" id="hiddenPassword"></i>
                    <i class="far fa-eye" id="visiblePassword"></i>
                </div>
           
            <div class="login_way">
                <a href="/phoneLogin">Login with OTP</a>
                <button formaction="/forgotPassword" formmethod="POST" id="forgot">Forgot Password</button>
            </div>
                <button type="submit" class="login-btn"  id="login">LOGIN<i class="fas fa-arrow-right"></i></button>
                <h4>Not Registered?<a href="/signup"> Sign Up</a></h4>       
                </form>     
