<!DOCTYPE html>
<html>
    <head>
        <%- include('links') %>   
        <link rel="stylesheet" href="../assets/scss/settings.css">
    </head>
    <body>
        <%- include('headerMain') %>
        <section>
            <div class="container_box">
                <%- include('toaster') %>
            <div class="dashboard">
                <h1>Dashboard</h1> 
                <% if(user.isDoctor == "user"){ %> 
                    <div class="mobile_dashboard">
                        <i class="fas fa-chevron-left"></i>
                        <h3><i class="fas fa-user-edit"></i>Settings</h3>
                        <i class="fas fa-chevron-right"></i>
                    </div>
                    <div class="web_dashboard">
                        <a href="/profile"><h4><i class="fas fa-user-edit"></i>Profile</h4></a>
                        <a href="/appointment"><h4><i class="fas fa-list"></i>Appoinments</h4></a>
                        <a href="/medicalReports"><h4><i class="fas fa-file-alt"></i>Medical Reports</h4></a>
                        <a href="/settings"><h3><i class="fas fa-users-cog"></i>Settings</h3></a>
                    </div>
                    <% }else{ %>
                        <div class="mobile_dashboard">
                            <i class="fas fa-chevron-left"></i>
                            <h3><i class="fas fa-user-edit"></i>Settings</h3>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                        <div class="web_dashboard">
                            <a href="/profile"><h4><i class="fas fa-user-edit"></i>Profile</h4></a>
                            <a href="/appointment"><h4><i class="fas fa-list"></i>Appoinments</h4></a>
                            <a href="/createSchedule"><h4><i class="fas fa-pen-fancy"></i>Create/Edit Schedule</h4></a>
                            <a href="/medicalReports"><h4><i class="fas fa-file-alt"></i>Medical Reports</h4></a>
                            <a href="/settings"><h3><i class="fas fa-users-cog"></i>Settings</h3></a>
                        </div>   
                        <% } %>
            </div>
        <div class="settings">
           <form action="/settings" method="POST">
            <div class="settings_header">
                <h1>Account Settings</h1>
                <button>Change Password</button>
            </div>
            <div class="input_grid">
                <div>
                    <h3>Current Password</h3>
                <input type="password" name="current_password" id="current_password">
                </div>
            </div>
            <div class="input_grid">
                <div>
                    <h3>New Password</h3>
                <div class="new_password_input">
                    <input type="password" name="new_password" id="password">
                    <i class="far fa-eye-slash" id="hiddenPassword"></i>
                <i class="far fa-eye" id="visiblePassword"></i>
                </div>
                </div>
                <div class="confirm_required">
                    <h3>Confirm Password</h3>
                <input type="password" name="confirm_password" id="confirm_password">
                </div>
            </div>
        </form>
    </div>
    </div>
        </section>
        <%- include('footer') %>
        <script src="../assets/scripts/toggle-password.js"></script>
    </body>
    </html>
    