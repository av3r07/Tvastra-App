<!DOCTYPE html>
<html>
    <head>
        
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" rel="stylesheet">
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="../assets/css/reset.css">
        <link rel="stylesheet" href="../assets/scss/theme.css">
        <link rel="stylesheet" href="../assets/scss/phoneLogin.css" type="text/css">    
    </head>
    <body>
        <div class="loginPanel">
            <%- include("headerMain")%> 
            <%- include("toaster") %>
            <div id="question-toaster"><p>Enter the ten digit mobile number</p></div>
            <div class="loginForm">
            <h3>Login</h3>
            <hr>
            <form action="/phoneLogin" method="POST">
                <div class="mobile">
                <input type="tel" pattern="[0-9]{10}" name="mobile" id="mobile" placeholder="Enter mobile number">
                <i class="fa fa-question-circle" id="question" aria-hidden="true"></i>
                </div>
                    <a href="/"><h3>Login with password</h3></a>
                <button type="submit" class="login-btn">LOGIN<i class="fas fa-arrow-right"></i></button>
                <h4>Not Registered?<a href="/signUp"> Sign Up</a></h4>       
                </form>     
        </div >
        <h4 class="copyright">All Rights Reserved. &copy; tvastra 2018</h4>
        </div>
        <script>
            var question = document.getElementById("question");
var show = document.getElementById("question-toaster");

question.addEventListener("click",function(){
    show.style.display = "block";
    setTimeout(function(){
           show.style.display = "none";
    },2000);
})
        </script>
    </body> 
</html>
